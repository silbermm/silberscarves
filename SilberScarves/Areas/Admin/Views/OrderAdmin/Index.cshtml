@model System.Collections.Generic.List<SilberScarves.Areas.Admin.Models.OrderAdmin>

@{
    ViewBag.Title = "Index";
}

<h2>Pending Orders</h2>
<table class="table">
    <tr>
        <th>
            Customer Name
        </th>
        <th>
            Order Amount
        </th>
        <th>
            Paid?
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Customer.firstName @item.Customer.lastName
        </td>
        <td>
          $ @item.Total
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order.hasBeenPaidFor)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Order.orderId }) |
            @Html.ActionLink("Ship", "Ship", new{ id=item.Order.orderId}, null)
        </td>
    </tr>
}

</table>


