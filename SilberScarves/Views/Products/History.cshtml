@model IEnumerable<SilberScarves.Models.ScarfOrder>

@{
    ViewBag.Title = "History";
}

<h2>History</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.isCart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hasShipped)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hasBeenPaidFor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.isCart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hasShipped)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hasBeenPaidFor)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.orderId }) |
            @Html.ActionLink("Details", "Details", new { id=item.orderId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.orderId })
        </td>
    </tr>
}

</table>
