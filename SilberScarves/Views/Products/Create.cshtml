@model SilberScarves.Models.ScarfItem
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <strong> Warning! </strong> @ViewBag.Error
        </div>
    }
    
    <div class="@(ViewBag.ErrorName != null ? "form-group has-error": "form-group") " >
        <label for="scarfName" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.name, new { @class = "form-control", @placeholder = "Name of the Scarf", @id="scarfName"})
        </div>
    </div>

    <div class="@(ViewBag.ErrorDescription != null ? "form-group has-error" : "form-group" )">
        <label for="scarfDescription" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.description, new { @class = "form-control", @placeholder = "Description of the Scarf", @id="scarfDescription" })
        </div>
    </div>

    <div class="@(ViewBag.ErrorPrice != null ? "form-group has-error": "form-group")  ">
        <label for="scarfPrice" class="col-sm-2 control-label">Price</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.price, new { @class = "form-control", @placeholder = "Price of the Scarf", @id = "scarfPrice" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default"> Create </button>
        </div>
    </div>
}
