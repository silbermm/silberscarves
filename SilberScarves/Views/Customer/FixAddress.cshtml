@using System.ComponentModel.Design
@model SilberScarves.Models.Address

@{
    ViewBag.Title = "Fix Your Address";
}

<h2>Fix Your Shipping Address</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">       
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.addressId)

        <div class="form-group">
            @Html.LabelFor(model => model.buildingNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.buildingNumber)
                @Html.ValidationMessageFor(model => model.buildingNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.street, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.street)
                @Html.ValidationMessageFor(model => model.street)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.apartmentNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.apartmentNumber)
                @Html.ValidationMessageFor(model => model.apartmentNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.city, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.city)
                @Html.ValidationMessageFor(model => model.city)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.stateCode, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.stateCode)
                @Html.ValidationMessageFor(model => model.stateCode)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.zipCode, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.zipCode)
                @Html.ValidationMessageFor(model => model.zipCode)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Cancel", "Checkout", "Products", new { area = "" }, new { })
                <input type="submit" value="Save Address" class="btn btn-default" />
            </div>
        </div>
    </div>
}

